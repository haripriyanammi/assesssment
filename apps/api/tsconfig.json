{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,

    "baseUrl": ".",
    "paths": {
      "@db/*": ["../../packages/db/prisma/*"]
    }
  },
  "include": ["src/**/*"]
}
