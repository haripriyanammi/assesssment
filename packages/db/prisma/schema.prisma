generator client {
  provider = "prisma-client-js"
}



datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}





// ---------------------------
// Vendor Table
// ---------------------------
model Vendor {
  id        Int       @id @default(autoincrement())
  name      String
  category  String?
  invoices  Invoice[]
  createdAt DateTime  @default(now())
}

// ---------------------------
// Invoice Table
// ---------------------------
model Invoice {
  id           Int          @id @default(autoincrement())
  invoiceNumber String
  vendorId     Int
  customerName String?
  issueDate    DateTime?
  dueDate      DateTime?
  status       String?
  totalAmount  Float?

  vendor  Vendor        @relation(fields: [vendorId], references: [id])
  lineItems LineItem[]
  payments  Payment[]

  createdAt DateTime     @default(now())
}

// ---------------------------
// Line Item Table
// ---------------------------
model LineItem {
  id        Int      @id @default(autoincrement())
  invoiceId Int
  description String?
  category    String?
  quantity    Float?
  unitPrice   Float?
  amount      Float?

  invoice   Invoice   @relation(fields: [invoiceId], references: [id])
}

// ---------------------------
// Payment Table
// ---------------------------
model Payment {
  id         Int      @id @default(autoincrement())
  invoiceId  Int
  amount     Float?
  paymentDate DateTime?
  method     String?
  status     String?

  invoice Invoice @relation(fields: [invoiceId], references: [id])
}

